@model TestTaskApp.WEB.Models.UserProfileDeleteViewModel

<h4>Delete the user.</h4>
<div class="form-horizontal" role="form">

    @using (Ajax.BeginForm("Delete", "UserProfile", new AjaxOptions
    {
        HttpMethod = "Post",
        UpdateTargetId = "dataConteiner"
    }))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Id, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DisplayFor(m => m.Id, new { @class = "form-control", @readonly = "true" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
            <div class="col-md10">
                @Html.DisplayFor(m => m.Name, new { @class = "from-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div>
                @Html.DisplayFor(m => m.Email, new { @class = "from-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10 col-md-offset-2">
                <input type="submit" class="btn btn-default" value="Delete" />
            </div>
        </div>
    }
</div>
