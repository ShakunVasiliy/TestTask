@model TestTaskApp.WEB.Models.UserProfileCUViewModel

<div class="form-horizontal" role="form">

    @using (Ajax.BeginForm(Model.ActionName, Model.ControllerName, new AjaxOptions
        {
            HttpMethod = "Post",
            UpdateTargetId = "dataConteiner"
        }))
    {
        @Html.ValidationSummary(false)
        <hr />
        <div class="form-group">
            @Html.LabelFor(m => m.Id, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Id, new { @class = "from-control", readOnly = "true" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
            <div class="col-md10">
                @Html.TextBoxFor(m => m.Name, new { @class = "from-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div>
                @Html.TextBoxFor(m => m.Email, new { @class = "from-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
            <div>
                @Html.TextBoxFor(m => m.Title, new { @class = "from-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Salutation, new { @class = "col-md-2 control-label" })
            <div>
                @Html.DropDownListFor(m => m.Salutation, Model.Salutations, new { @class = "from-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("ManagerId", "Manager", new { @class = "col-md-2 control-label" })
            <div>
                @Html.DropDownListFor(m => m.ManagerId, Model.Managers, new { @class = "from-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.DateOfBirth, new { @class = "col-md-2 control-label" })
            <div>
                @Html.EditorFor(m => m.DateOfBirth, new { @class = "from-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Bio, new { @class = "col-md-2 control-label" })
            <div>
                @Html.TextAreaFor(m => m.Bio, 6, 35, new { @class = "from-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10 col-md-offset-2">
                <input type="submit" class="btn btn-default" value="@Model.SubmitValue" />
            </div>
        </div>
    }
</div>
